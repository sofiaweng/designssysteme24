---
const { url="#", cardimage="", cardimagealt="", 

badgenyt="false", badgerabat="false", badgerabatsats="", badgefaapladser="false", 

holdnavn="", tidspunkt="", aldersgruppe="", niveau="", pladserpaaholdet="", lokale="", holdbeskrivelse="", 

underviserfoto="", underviserfotoalt="", undervisernavn="", underviserinfo="" } = Astro.props; 

---


<article class="border-solid border-blue-500 border @container">
    <a href={url} class="flex flex-col justify-between h-full">
        <header class="relative">
            {(badgenyt === "true") && <div class="badge absolute bg-blue-500 p-xs">Nyt hold!</div>}
<img src={cardimage} alt={cardimagealt} class="aspect-[16/9] max-h-fit"></img>
</header>
<div class="holdinfo p-xs border-b border-blue-500">
    <h1 class="text-3xl mb-xs">{holdnavn}</h1>
    <div class=" mb-xs flex flex-col @md:flex:row md:justify-between">
        <div class="venstrerow">
            <div><span>Tid: </span><span>{tidspunkt}</span></div>
            <div><span>Alder: </span><span>{aldersgruppe}</span></div>
            <div><span>Niveau: </span><span>{niveau}</span></div>
        </div>
        <div class="rightrow">
            <div><span>Deltagere: </span><span>{pladserpaaholdet}</span></div>
            <div><span>Lokale: </span><span>{lokale}</span></div>
        </div>
       
    </div>
    <p class="">{holdbeskrivelse}</p>
</div>
<div class="underviserinfo p-xs flex ">
<img src={underviserfoto} alt={underviserfotoalt} class="w-1/6 rounded-full aspect-[1/1]"></img>
<div>
    <div><span>Underviser:</span> <span>{undervisernavn}</span></div>
  
    <p>{underviserinfo}</p>
</div>
</div>
</a>
</article>